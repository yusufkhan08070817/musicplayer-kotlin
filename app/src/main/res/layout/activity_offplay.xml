<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/thispla"
    android:layout_height="match_parent"
    android:background="@color/ddblue"
    tools:context=".offplay">


    <LinearLayout
        android:id="@+id/offlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/dur"
        android:elevation="90dp"
        android:orientation="vertical"
        android:outlineSpotShadowColor="@color/lblue"
        android:visibility="visible">
        <ImageView
            android:id="@+id/offbtlog"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/out"
            android:rotation="180"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:background="@color/bc"
            android:elevation="90dp"
            android:orientation="vertical"

            android:outlineAmbientShadowColor="@color/lblue"
            android:outlineSpotShadowColor="@color/lblue">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/offimage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/bg" />
        </LinearLayout>

        <TextView
            android:id="@+id/offalbum"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="album"
            android:textColor="@color/lblue"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/offart"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="artist"
            android:textColor="@color/lblue"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/offcurdur"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="0:00"
                android:textColor="@color/lblue" />

            <TextView
                android:id="@+id/offshowdur"
                android:layout_width="50dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="210dp"
                android:text="0:00"
                android:textColor="@color/lblue" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/offseek"
            style="@style/MySeekBar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-20dp"
            android:layout_marginRight="40dp"
            android:thumb="@drawable/thumb"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            >
            <ImageView
                android:id="@+id/offbteq"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"


                android:clickable="true"
                android:src="@drawable/eqicon" />
            <ImageView
                android:id="@+id/offplay"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/play"
                android:visibility="visible" />
            <ImageView
                android:id="@+id/offpaus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/pause_"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/ilike"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/ilike"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/unlike"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/notlike"
                android:visibility="visible" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>