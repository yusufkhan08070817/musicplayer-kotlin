<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lplayer"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ddblue"
    tools:context=".player"
    >
    <LinearLayout
        android:id="@+id/onlayout"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_margin="20dp"
        android:elevation="90dp"
        android:outlineSpotShadowColor="@color/lblue"
        android:background="@drawable/dur"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="400dp"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/curdur"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/lblue"
                android:text="0:00"
                />
            <TextView
                android:id="@+id/showdur"
                android:layout_width="50dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="210dp"
                android:textColor="@color/lblue"
                android:text="0:00"
                />

        </LinearLayout>
        <SeekBar
            android:id="@+id/seek"
            android:layout_width="match_parent"
            style="@style/MySeekBar"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="-20dp"
            android:thumb="@drawable/thumb"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <ImageView
                android:id="@+id/bteq"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"

                android:clickable="true"
                android:src="@drawable/eqicon" />

            <ImageView
                android:id="@+id/play"
                android:visibility="visible"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/play"

                android:layout_marginLeft="20dp"
                />
            <ImageView
                android:id="@+id/paus"
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pause_"

                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/offlayout"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_margin="20dp"
        android:elevation="90dp"
        android:outlineSpotShadowColor="@color/lblue"
        android:background="@drawable/dur"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        >
        <TextView
            android:id="@+id/totalno"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/lblue"
            android:text="total "
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/musicrv"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/serlayout"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_margin="20dp"
        android:elevation="90dp"
        android:outlineSpotShadowColor="@color/lblue"
        android:background="@drawable/dur"
        >

    </LinearLayout>
    <LinearLayout
        android:id="@+id/homelayout"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_margin="20dp"
        android:elevation="90dp"
        android:outlineSpotShadowColor="@color/lblue"
        android:background="@drawable/dur"

        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/avator"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:background="@drawable/button"
            android:layout_gravity="center"

            android:src="@drawable/av4"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            >
            <ImageView
                android:id="@+id/btlog"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/out"
                android:rotation="180"


                />
            <ImageView
                android:id="@+id/change"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/change"
                android:rotation="180"
            android:layout_marginLeft="200dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/flistlayout"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_margin="20dp"
        android:elevation="90dp"
        android:outlineSpotShadowColor="@color/lblue"
        android:background="@drawable/dur"
        >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:background="@color/ddblue"
        >
        <LinearLayout
            android:id="@+id/isser"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:background="@color/dblue">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/serch"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/islib"
            android:layout_width="46dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:background="@color/dblue">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/lib"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/isonline"
            android:layout_width="51dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:background="@color/lblue">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/online_play"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ishome"
            android:layout_width="41dp"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:background="@color/dblue">
            <ImageView
                android:layout_marginTop="-1dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/home"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>